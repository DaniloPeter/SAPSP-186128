<mvc:View
    controllerName="com.segezha.form.roll.conversion.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true">
    <Page id="homePageId">
        <customHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Опросный лист" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox class="sapUiSmallMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <HBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Завод:" required="true" />
                            <Input
                                required="true"
                                width="100%"
                                value="{Werks}"
                                valueState="{=!!${state>/errorFields/Werks} ? 'Error' : 'None'}"
                                change="handleChange">
                            </Input>
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Ресурс:" required="true" />
                            <Input
                                required="true"
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                value="{WpResource}"
                                valueState="{=!!${state>/errorFields/WpResource} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/WORKPLACESet'
                                }"
                                change="handleChange">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="{/#WORKPLACE/WpResource/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#WORKPLACE/WpResourceText/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#WORKPLACE/WpParameter/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#WORKPLACE/Werks/@sap:label}" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{WpResource}" />
                                            <Text text="{WpResourceText}" />
                                            <Text text="{WpParameter}" />
                                            <Text text="{Werks}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Склад:" required="true" />
                            <Input
                                required="true"
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                value="{Lgort}"
                                valueState="{=!!${state>/errorFields/Lgort} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/LGORTSet'
                                }"
                                change="handleChange">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="{/#LGORT/Lgort/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#LGORT/Lgobe/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#LGORT/Werks/@sap:label}" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{Lgort}" />
                                            <Text text="{Lgobe}" />
                                            <Text text="{Werks}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                        <VBox width="100%">
                            <Label text="Режим флексопечати:" />
                            <Input
                                width="100%"
                                value="{WpOperatingmode}"
                            >
                            </Input>
                        </VBox>
                    </HBox>
                    <HBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Дата и время:" required="true" />
                            <DateTimePicker
                                dateValue="{Zdate}"
                                width="100%"
                                displayFormat="dd.MM.yyyy HH:mm:ss"
                            />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Смена:" />
                            <Input
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                value="{Smen}"
                                valueState="{=!!${state>/errorFields/Smen} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/SMENSet'
                                }"
                                change="handleChange">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="{/#SMEN/Smen/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#SMEN/Period/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#SMEN/Werks/@sap:label}" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{Smen}" />
                                            <Text text="{Period}" />
                                            <Text text="{Werks}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                        <VBox width="100%">
                            <Label text="Бригада:" />
                            <Input
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                value="{Brig}"
                                valueState="{=!!${state>/errorFields/Brig} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/BRIGSet'
                                }"
                                change="handleChange">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="{/#BRIG/Brig/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#BRIG/BrigName/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#BRIG/Werks/@sap:label}" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{Brig}" />
                                            <Text text="{BrigName}" />
                                            <Text text="{Werks}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                    </HBox>
                </VBox>
                <HBox class="sapUiSmallMarginBottom">
                    <VBox
                        class="sapUiFormResGrid sapUiFormBackgrTranslucent sapUiSmallMarginEnd"
                        width="100%">
                        <Title text="Заказ" />
                        <VBox>
                            <Label text="Заказ" required="true" />
                            <Input
                                required="true"
                                maxLength="12"
                                change="handleChangeAufnr"
                                value="{Aufnr}"
                                valueState="{=!!${state>/errorFields/Aufnr} ? 'Error' : 'None'}"
                                placeholder="Номер технологического заказа" />
                        </VBox>
                        <VBox>
                            <Label text="Клише" required="true" />
                            <Input required="true" maxLength="40"
                                value="{Klishe}" placeholder="Клише"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Описание клише" />
                            <Input maxLength="40"
                                value="{Zklishetext}" placeholder="Описание клише" />
                        </VBox>
                        <VBox>
                            <Label text="Скорость машины" />
                            <Input value="{Zobjspeed}"
                                placeholder="Скорость машины" />
                        </VBox>
                        <VBox>
                            <Label text="Печатник высокой печати" required="true" />
                            <Input required="true" value="{Zprinter}"
                                maxLength="150"
                                change="handleChange"
                                placeholder="ФИО печатника" />
                        </VBox>
                        <VBox>
                            <Label text="Инженер по качеству" />
                            <Input
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                value="{Zlogin}"
                                valueState="{=!!${state>/errorFields/Zlogin} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/QASet'
                                }">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="{/#QA/Zlogin/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Zfullnameqa/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Zdepartment/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Zpost/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Zlevel/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Zemail/@sap:label}" />
                                    </Column>
                                    <Column>
                                        <Text text="{/#QA/Werks/@sap:label}" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{Zlogin}" />
                                            <Text text="{Zfullnameqa}" />
                                            <Text text="{Zdepartment}" />
                                            <Text text="{Zpost}" />
                                            <Text text="{Zlevel}" />
                                            <Text text="{Zemail}" />
                                            <Text text="{Werks}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                    </VBox>
                    <VBox class="sapUiFormResGrid sapUiFormBackgrTranslucent" width="100%">
                        <Title text="Рулон" />
                        <VBox>
                            <Label text="№ Рулона 1" required="true" />
                            <Input required="true" value="{RollNum1}" change="handleChangeRollNum"
                                placeholder="Номер рулона 1" />
                        </VBox>
                        <VBox>
                            <Label text="Формат исходного рулона 1" required="true" />
                            <Input required="true" value="{Zformat1}" change="handleChange"
                                placeholder="Формат исходного рулона 1" />
                        </VBox>
                        <VBox>
                            <Label text="Радиус остатка 1" required="true" />
                            <Input required="true" value="{Zradius1}" change="handleChange"
                                placeholder="Радиус остатка 1" />

                        </VBox>
                        <VBox>
                            <Label text="№ Рулона 2" />
                            <Input value="{RollNum2}" change="handleChangeRollNum"
                                placeholder="Номер рулона 2" />
                        </VBox>
                        <VBox>
                            <Label text="Формат исходного рулона 2" />
                            <Input value="{Zformat2}"
                                placeholder="Формат исходного рулона 2" />
                        </VBox>
                        <VBox>
                            <Label text="Радиус остатка 1" />
                            <Input value="{Zradius2}"
                                placeholder="Радиус остатка 2" />

                        </VBox>
                    </VBox>
                </HBox>
                <VBox class="sapUiFormResGrid sapUiFormBackgrTranslucent sapUiSmallMarginBottom">
                    <HBox width="100%">
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Формат запечатанного рулона" required="true" />
                            <Input required="true"
                                value="{Znewformat}" change="handleChange"
                                placeholder="Формат запечатанного рулона" />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Погонные метры" required="true" />
                            <Input
                                required="true"
                                value="{Zpm}"
                                liveChange="handleChangeMetersOrReport"
                                placeholder="Метраж выходящего погонного рулона" />
                        </VBox>
                        <VBox width="100%">
                            <Label text="Длина рапорта" required="true" />
                            <Input required="true"
                                value="{Zlengthreport}"
                                liveChange="handleChangeMetersOrReport"
                                placeholder="Длина рапорта" />
                        </VBox>
                    </HBox>
                    <HBox width="100%">
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Оттиски" required="true" />
                            <Input required="true"
                                value="{Zstamp}" />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Диаметр запечатанного рулона" required="true" />
                            <Input required="true"
                                placeholder="Диаметр запечатанного рулона"
                                value="{Zflexdiameter}" />
                        </VBox>
                        <VBox width="100%">
                            <Label text="Вес срыва:" required="true" />
                            <Input required="true"
                                value="{Zwaste}"
                                liveChange="handleChangeZwaste"
                            />
                            <Text
                                text="При срыве более 50 кг необходимо заполнить поля Брак" />
                        </VBox>
                    </HBox>
                </VBox>

                <VBox class="sapUiTinyMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <Table items="{state>/tables/defect/items}">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Брак" level="H2" />
                                    <Switch id="defectSwitch"
                                        state="{state>/switches/defect}"
                                        enabled="{ parts: [{ path: 'Zwaste'}],
                                            formatter: '.formatter.formatSwitchDefectEnabled' }"
                                        customTextOn=" " customTextOff=" " />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" text="Добавить брак"
                                        enabled="{state>/switches/defect}"
                                        press="handleAddDefect" />
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="Объект брака" />
                            </Column>
                            <Column>
                                <Text text="Вид брака" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Input
                                    value="{state>Zobjdefect}"
                                    placeholder="Комментарий, содержащий информацию о браке рулона"
                                    enabled="{state>/switches/defect}" />
                                <Input
                                    value="{state>Zcommentdefect}"
                                    placeholder="Комментарий, содержащий информацию о браке рулона"
                                    enabled="{state>/switches/defect}" />
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <VBox class="sapUiTinyMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <Table items="{state>/tables/downTime/items}">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Простой" level="H2" />
                                    <Switch
                                        state="{state>/switches/downTime}"
                                        customTextOn=" "
                                        customTextOff=" "
                                    />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" text="Добавить простой"
                                        enabled="{state>/switches/downTime}"
                                        press="handleAddDowntime" />
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="Тип простоя" />
                            </Column>
                            <Column>
                                <Text text="Начало простоя" />
                            </Column>

                            <Column>
                                <Text text="Конец простоя" />
                            </Column>
                            <Column>
                                <Text text="Время простоя, часов, минут" />
                            </Column>
                            <Column>
                                <Text text="Причина простоя" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Input
                                    value="{state>Kurztext}"
                                    enabled="{state>/switches/downTime}" />
                                <TimePicker
                                    enabled="{= ${state>/switches/downTime}}"
                                    dateValue="{state>Auztv}"
                                    change="handleChangeDownTime"
                                    displayFormat="HH:mm"
                                    valueFormat="HH:mm"
                                    placeholder="--:--"
                                />
                                <TimePicker
                                    enabled="{= ${state>/switches/downTime}}"
                                    dateValue="{state>Auztb}"
                                    valueFormat="HH:mm"
                                    displayFormat="HH:mm"
                                    change="handleChangeDownTime"
                                    placeholder="--:--" />

                                <TimePicker
                                    enabled="{= ${state>/switches/downTime}}"
                                    value="{
                                        'path':'state>Zdownhours',
                                        'type': 'sap.ui.model.type.Time',
                                        'formatOptions': {
                                                'pattern': 'HH:mm'
                                        }
                                    }"
                                    displayFormat="HH:mm"
                                    valueFormat="HH:mm"
                                    placeholder="--:--"
                                />
                                <Input
                                    value="{state>Qmtxt}"
                                    enabled="{state>/switches/downTime}" />
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Подтвердить"
                    press="handleConfirmFormData" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>