<mvc:View
    controllerName="com.segezha.form.roll.conversion.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true">
    <Page id="homePageId">
        <customHeader>
            <Toolbar>
                <ToolbarSpacer />
                <Title text="Опросный лист" />
                <ToolbarSpacer />
            </Toolbar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox class="sapUiSmallMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <HBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Завод:" />
                            <Input
                                id="customInput"
                                width="100%"
                                showSuggestion="true"
                                maxSuggestionWidth="60rem"
                                showTableSuggestionValueHelp="false"
                                value="{Material}"
                                valueState="{=!!${state>/MaterialError} ? 'Error' : 'None'}"
                                suggestionRows="{
                                    path: '/VHMaterialSet'
                                }"
                                change="handleChange">
                                <suggestionColumns>
                                    <Column>
                                        <Text text="Колонка 1" />
                                    </Column>
                                    <Column>
                                        <Text text="Колонка 2" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{ID}" />
                                            <Text text="{Text}" />
                                        </cells>
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Ресурс:" />
                            <Select forceSelection="false" id="resourceSelect"
                                selectedKey="{data>/resource}"
                                width="100%"
                                items="{path: 'resource>/Resource'}"
                            >
                                <core:Item key="{resource>key}" text="{resource>name}" />
                            </Select>
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Склад:" />
                            <Select width="100%" forceSelection="false" id="storeSelect"
                                items="{ path: 'store>/Store'}"
                                selectedKey="{data>/store}"
                            >
                                <core:Item key="{store>key}" text="{store>name}" />
                            </Select>
                        </VBox>
                        <VBox width="100%">
                            <Label text="Режим флексопечати:" />
                            <Select forceSelection="false" id="printModeSelect"
                                selectedKey="{data>/printMode}"
                                width="100%"
                                items="{path: 'printMode>/PrintMode'}"
                            >
                                <core:Item key="{printMode>key}" text="{printMode>name}" />
                            </Select>
                        </VBox>
                    </HBox>
                    <HBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Дата и время:" />
                            <DateTimePicker id="dateTimePicker"
                                dateValue="{data>/dateTime}"
                                width="100%"
                                displayFormat="dd.MM.yyyy HH:mm:ss"
                                placeholder="00.00.0000 00:00:00"
                            />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Смена:" />
                            <Select id="shiftSelect"
                                forceSelection="false"
                                width="100%"
                                items="{path: 'shift>/Shift'}"
                                selectedKey="{data>/shift}"
                            >
                                <core:Item key="{shift>key}" text="{shift>name}" />
                            </Select>
                        </VBox>
                        <VBox width="100%">
                            <Label text="Бригада:" />
                            <Select id="crewSelect"
                                forceSelection="false"
                                width="100%"
                                items="{path: 'crew>/Crew'}"
                                selectedKey="{data>/crew}"
                            >
                                <core:Item key="{crew>key}" text="{crew>name}" />
                            </Select>
                        </VBox>
                    </HBox>
                </VBox>
                <HBox class="sapUiSmallMarginBottom">
                    <VBox
                        class="sapUiFormResGrid sapUiFormBackgrTranslucent sapUiSmallMarginEnd"
                        width="100%">
                        <Title text="Заказ" />
                        <VBox>
                            <Label text="Заказ" />
                            <Input id="techNumber"
                                value="{data>/techNumber}"
                                placeholder="Номер технологического заказа" />
                        </VBox>
                        <VBox>
                            <Label text="Клише" />
                            <Input id="cliche"
                                value="{data>/cliche}" placeholder="Клише"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Описание клише" />
                            <Input id="clicheDescription"
                                value="{data>/clicheDescription}" placeholder="Описание клише" />
                        </VBox>
                        <VBox>
                            <Label text="Скорость машины" />
                            <Input id="machineSpeed" value="{data>/machineSpeed}"
                                placeholder="Скорость машины" />
                        </VBox>
                        <VBox>
                            <Label text="Печатник высокой печати" />
                            <Input id="printName" value="{data>/printName}"
                                maxLength="150"
                                placeholder="ФИО печатника" />
                        </VBox>
                        <VBox>
                            <Label text="Инженер по качеству" />
                            <Select id="engineerSelect"
                                forceSelection="false"
                                width="100%"
                                items="{path: 'engineer>/Engineer'}"
                                selectedKey="{data>/engineer}"
                            >
                                <core:Item key="{engineer>key}"
                                    text="{engineer>name}" />
                            </Select>
                        </VBox>
                    </VBox>
                    <VBox class="sapUiFormResGrid sapUiFormBackgrTranslucent" width="100%">
                        <Title text="Рулон" />
                        <VBox>
                            <Label text="№ Рулона 1" />
                            <Input id="rollNumberOne" value="{data>/rollNumberOne}"
                                placeholder="Номер рулона 1" />
                        </VBox>
                        <VBox>
                            <Label text="Формат исходного рулона 1" />
                            <Input id="origRollFormatOne"
                                value="{data>/origRollFormatOne}"
                                placeholder="Формат исходного рулона 1" />
                        </VBox>
                        <VBox>
                            <Label text="Радиус остатка 1" />
                            <Input id="remainNumberOne"
                                value="{data>/remainNumberOne}"
                                placeholder="Радиус остатка 1" />

                        </VBox>
                        <VBox>
                            <Label text="№ Рулона 2" />
                            <Input id="rollNumberTwo" value="{data>/rollNumberTwo}"
                                placeholder="Номер рулона 2" />
                        </VBox>
                        <VBox>
                            <Label text="Формат исходного рулона 2" />
                            <Input id="origRollFormatTwo" value="{data>/origRollFormatTwo}"
                                placeholder="Формат исходного рулона 2" />
                        </VBox>
                        <VBox>
                            <Label text="Радиус остатка 2" />
                            <Input id="remainNumberTwo"
                                value="{data>/remainNumberTwo}"
                                placeholder="Радиус остатка 2" />
                        </VBox>
                    </VBox>
                </HBox>
                <VBox class="sapUiFormResGrid sapUiFormBackgrTranslucent sapUiSmallMarginBottom">
                    <HBox width="100%">
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Формат запечатанного рулона" />
                            <Input id="printRollFormat"
                                value="{data>/printRollFormat}"
                                placeholder="Формат запечатанного рулона" />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Погонные метры" />
                            <Input
                                id="printMeters"
                                value="{data>/printMeters}"
                                liveChange="handleChangeMetersOrReport"
                                placeholder="Метраж выходящего погонного рулона" />
                        </VBox>
                        <VBox width="100%">
                            <Label text="Длина рапорта" />
                            <Input id="reportLength"
                                value="{data>/reportLength}"
                                liveChange="handleChangeMetersOrReport"
                                placeholder="Длина рапорта" />
                        </VBox>
                    </HBox>
                    <HBox width="100%">
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Оттиски" />
                            <Input id="overprint"
                                value="{data>/overPrints}" />
                        </VBox>
                        <VBox width="100%" class="sapUiSmallMarginEnd">
                            <Label text="Диаметр запечатанного рулона" />
                            <Input id="rollDiameter"
                                placeholder="Диаметр запечатанного рулона"
                                value="{data>/rollDiameter}" />
                        </VBox>
                        <VBox width="100%">
                            <Label text="Вес срыва:" />
                            <Input id="disruptWeight"
                                placeholder="Вес срыва"
                                value="{data>/disruptWeight}"
                                liveChange="handleChangeDisruptWeight"
                            />
                            <Text
                                text="При срыве более 50 кг необходимо заполнить поля Брак" />
                        </VBox>
                    </HBox>
                </VBox>

                <VBox class="sapUiTinyMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <Table items="{state>/braks/items}">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Брак" level="H2" />
                                    <Switch id="defectSwitch"
                                        state="{data>/switch/defect}"
                                        enabled="{ parts: [{ path: 'data>/disruptWeight'}],
                                            formatter: '.formatter.formatSwitchDefectEnabled' }"
                                        customTextOn=" " customTextOff=" " />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" text="Добавить брак"
                                        enabled="{data>/switch/defect}"
                                        press="handleAddBrak" />
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="Объект брака" />
                            </Column>
                            <Column>
                                <Text text="Вид брака" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Select
                                    forceSelection="false"
                                    width="100%"
                                    enabled="{data>/switch/defect}"
                                    items="{path: 'defect>/Defect'}"
                                    selectedKey="{state>defect}"
                                >
                                    <core:Item key="{defect>key}" text="{defect>name}" />
                                </Select>
                                <Input
                                    value="{state>comment}"
                                    placeholder="Комментарий, содержащий информацию о браке рулона"
                                    enabled="{data>/switch/defect}" />
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <VBox class="sapUiTinyMarginBottom sapUiFormResGrid sapUiFormBackgrTranslucent">
                    <Table items="{state>/table/items}">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title text="Простой" level="H2" />
                                    <Switch id="downTimeSwitch"
                                        state="{data>/switch/downTime}"
                                        customTextOn=" "
                                        customTextOff=" "
                                    />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" text="Добавить простой"
                                        enabled="{data>/switch/downTime}"
                                        press="handleAddDowntime" />
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column>
                                <Text text="Тип простоя" />
                            </Column>
                            <Column>
                                <Text text="Начало простоя" />
                            </Column>

                            <Column>
                                <Text text="Конец простоя" />
                            </Column>
                            <Column>
                                <Text text="Время простоя, часов, минут" />
                            </Column>
                            <Column>
                                <Text text="Причина простоя" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Select forceSelection="false" id="downTimeSelect"
                                    enabled="{= ${data>/switch/downTime}}"
                                    items="{
                                            path: 'downTime>/DownTime',
                                            templateShareable: false
                                    }"
                                    selectedKey="{state>downTimeType}">
                                    <core:Item key="{downTime>key}" text="{downTime>name}" />
                                </Select>
                                <TimePicker id="dateBeginItem"
                                    enabled="{= ${data>/switch/downTime}}"
                                    dateValue="{state>dateBegin}"
                                    change="handleChangeDownTime"
                                    displayFormat="HH:mm"
                                    valueFormat="HH:mm"
                                    placeholder="--:--"
                                />
                                <TimePicker id="downTimeItem"
                                    enabled="{= ${data>/switch/downTime}}"
                                    dateValue="{state>dateEnd}"
                                    valueFormat="HH:mm"
                                    displayFormat="HH:mm"
                                    change="handleChangeDownTime"
                                    placeholder="--:--" />

                                <TimePicker id="dateBeginItem2"
                                    enabled="{= ${data>/switch/downTime}}"
                                    value="{state>downTime}"
                                    displayFormat="HH:mm"
                                    valueFormat="HH:mm"
                                    placeholder="--:--"
                                />
                                <Input id="downTimeReason"
                                    enabled="{= ${data>/switch/downTime}}"
                                    value="{state>downTimeReason}"
                                    placeholder="Причина простоя"
                                ></Input>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Подтвердить"
                    press="onConfirm" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>